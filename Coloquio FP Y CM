using System;
using System.IO;
using System.Collections.Generic;

class TP3F1
{
    static string[,] datos;
    static int filas, columnas;

    static void Main()
    {
        datos = CargarDatos();
        if (datos != null)
        {
            filas = datos.GetLength(0);
            columnas = datos.GetLength(1);
            MenuPrincipal();
        }
    }

    static string[,] CargarDatos()
    {
        string rutaArchivo = @"C:\Users\Usuario\Desktop\PROGRAMACIONFP\\f1_last5years.csv";
        string[] lineas = File.ReadAllLines(rutaArchivo);

        int filas = lineas.Length;
        int cols = lineas[0].Split(',').Length;

        string[,] datos = new string[filas, cols];

        for (int i = 0; i < filas; i++)
        {
            string linea = lineas[i];
            if (i == 0 && linea.Length > 0 && linea[0] == '\uFEFF')
                linea = linea.Substring(1);

            string[] values = linea.Split(',');
            for (int j = 0; j < cols; j++)
            {
                datos[i, j] = values[j];
            }
        }

        return datos;
    }

    static void MenuPrincipal()
    {
        int opcion;
        do
        {
            Console.WriteLine("====== ANÁLISIS DE F1 (2016-2024) =====");
            Console.WriteLine("1. Podios de un piloto");
            Console.WriteLine("2. Puntos de equipo por año");
            Console.WriteLine("3. Mejor remontada");
            Console.WriteLine("4. Lista de equipos");
            Console.WriteLine("5. Ver todos los datos");
            Console.WriteLine("6. Salir");
            Console.WriteLine("7. Promedio de mejora por piloto"); // ESTA ES LA NUEVA FUNCIÓN
            Console.Write("Elige una opcion: ");

            if (!int.TryParse(Console.ReadLine(), out opcion))
            {
                Console.WriteLine("Entrada inválida. Intente nuevamente.");
                continue;
            }

            switch (opcion)
            {
                case 1: PodiosPiloto(); break;
                case 2: PuntosEquipo(); break;
                case 3: MejorRemontada(); break;
                case 4: ListaEquipos(); break;
                case 5: VerDatos(); break;
                case 6: Console.WriteLine("Adios!"); break;
                case 7: PromedioMejoraPiloto(); break;  // nueva funcion
                default: Console.WriteLine("Opción incorrecta"); break;
            }

            if (opcion != 6)
            {
                Console.WriteLine("\nPresiona Enter para continuar");
                Console.ReadLine();
                Console.Clear();
            }

        } while (opcion != 6);
    }

    static void PodiosPiloto()
    {
        Console.Write("Nombre del piloto: ");
        string nombre = Console.ReadLine();
        int podios = 0;

        for (int i = 1; i < filas; i++)
        {
            if (datos[i, 2].ToLower().Contains(nombre.ToLower()))
            {
                int llegada;
                if (int.TryParse(datos[i, 5], out llegada))
                {
                    if (llegada == 1 || llegada == 2 || llegada == 3)
                        podios++;
                }
            }
        }

        if (podios > 0)
            Console.WriteLine($"{nombre} tuvo {podios} podios");
        else
            Console.WriteLine("Piloto no encontrado o sin podios");
    }

    static void PuntosEquipo()
    {
        Console.Write("Nombre del equipo: ");
        string equipo = Console.ReadLine();
        Console.Write("Año: ");
        string año = Console.ReadLine();

        double total = 0;
        bool encontrado = false;

        Console.WriteLine($"\nResultados de {equipo} en {año}:");

        for (int i = 1; i < filas; i++)
        {
            if (datos[i, 0] == año && datos[i, 1].ToLower() == equipo.ToLower())
            {
                encontrado = true;
                string piloto = datos[i, 2];
                double puntos;
                double.TryParse(datos[i, 6], out puntos);
                total += puntos;
                Console.WriteLine($"{piloto}: {puntos} puntos");
            }
        }

        if (encontrado)
            Console.WriteLine($"Total: {total} puntos");
        else
            Console.WriteLine("No se encontraron datos");
    }

    static void MejorRemontada()
    {
        int mejor = int.MinValue;
        string pilotoMejor = "", añoMejor = "", carreraMejor = "", equipoMejor = "";

        for (int i = 1; i < filas; i++)
        {
            int salida, llegada;

            if (int.TryParse(datos[i, 4], out salida) &&
                int.TryParse(datos[i, 5], out llegada))
            {
                int remontada = salida - llegada;

                if (remontada > mejor)
                {
                    mejor = remontada;
                    pilotoMejor = datos[i, 2];
                    añoMejor = datos[i, 0];
                    carreraMejor = datos[i, 3];
                    equipoMejor = datos[i, 1];
                }
            }
        }

        if (mejor == int.MinValue)
        {
            Console.WriteLine("No hay datos válidos.");
            return;
        }

        Console.WriteLine("\nLa mejor remontada fue:");
        Console.WriteLine($"Piloto: {pilotoMejor}");
        Console.WriteLine($"Año: {añoMejor}");
        Console.WriteLine($"Carrera: {carreraMejor}");
        Console.WriteLine($"Equipo: {equipoMejor}");
        Console.WriteLine($"Remontada: +{mejor} posiciones");
    }

    static void ListaEquipos()
    {
        List<string> equipos = new List<string>();

        for (int i = 1; i < filas; i++)
        {
            string equipo = datos[i, 1];
            if (!equipos.Contains(equipo))
                equipos.Add(equipo);
        }

        equipos.Sort();

        Console.WriteLine("Equipos ordenados:");
        foreach (string e in equipos)
            Console.WriteLine(e);
    }

    static void VerDatos()
    {
        for (int i = 0; i < filas; i++)
        {
            for (int j = 0; j < columnas; j++)
            {
                Console.Write(datos[i, j] + " | ");
            }
            Console.WriteLine();
        }
    }

    // ================================
    // PROMEDIO DE MEJORA POR PILOTO (NUEVA FUNCION AGREGADA)
    // ================================
    static void PromedioMejoraPiloto()
    {
        Console.Write("Nombre del piloto: ");
        string nombre = Console.ReadLine();

        int carrerasConsideradas = 0;
        double sumaMejoras = 0;

        for (int i = 1; i < filas; i++)
        {
            if (datos[i, 2].ToLower().Contains(nombre.ToLower()))
            {
                int salida, llegada;

                if (int.TryParse(datos[i, 4], out salida) &&
                    int.TryParse(datos[i, 5], out llegada))
                {
                    int mejora = salida - llegada;
                    sumaMejoras += mejora;
                    carrerasConsideradas++;
                }
            }
        }

        if (carrerasConsideradas == 0)
        {
            Console.WriteLine("Piloto no encontrado o sin datos válidos");
            return;
        }

        double promedio = sumaMejoras / carrerasConsideradas;

        Console.WriteLine($"\nPiloto: {nombre}");
        Console.WriteLine($"Carreras consideradas: {carrerasConsideradas}");
        Console.WriteLine($"Promedio de mejora por carrera: {promedio:F2}");

        // Mensaje según signo del promedio
        if (promedio > 0)
        {
            Console.WriteLine("(Números positivos indican que el piloto ganó posiciones en promedio)");
        }
        else if (promedio < 0)
        {
            Console.WriteLine("(Números negativos indican que el piloto perdió posiciones en promedio)");
        }
        else
        {
            Console.WriteLine("(Promedio 0: el piloto no ganó ni perdió posiciones en promedio)");
        }
    }
}
